<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ProfileActivity"
    android:id="@+id/profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1E1E1E">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="back navigation"
                app:tint="#CCCCCC"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_arrow_left_alt_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/support_background"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/outline_chat_24"
                    app:tint="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="support"
                    android:textStyle="bold"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="profile image"
                android:src="@drawable/baseline_account_circle_24"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="andaz Kumar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="member since Dec, 2020"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/edit_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="#CCCCCC"
                    android:src="@drawable/outline_edit_24" />
            </LinearLayout>
        </LinearLayout>

        <!-- CRED Garage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/linear_border_background"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/cred_car_background">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_directions_car_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="get to know your vehicles, inside out"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="CRED garage"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        app:tint="@color/white"
                        android:contentDescription="navigate to cred garage"
                        android:src="@drawable/outline_arrow_right_alt_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/credit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_line_start_circle_24"
                android:contentDescription="credit score"
                android:layout_gravity="center"
                app:tint="#CCCCCC"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="credit score"
                android:fontFamily="sans-serif"
                android:textColor="#CCCCCC"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ REFRESH AVAILABLE"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:fontFamily="sans-serif-medium"
                android:textColor="#00FF88"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_credit_score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="757"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_right_alt_24"
                android:contentDescription="navigate to credit score"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#444444" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center"
            android:layout_marginVertical="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_currency_rupee_24"
                app:tint="#CCCCCC"
                android:contentDescription="lifetime cashback"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/text_lifetime_cashback"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="lifetime cashback"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="#CCCCCC"
                android:textSize="15sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="â‚¹3"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10dp"
                android:textSize="15sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_right_alt_24"
                android:contentDescription="navigate to lifetime cashback"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#444444" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_payments_24"
                app:tint="#CCCCCC"
                android:contentDescription="bank balance"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="bank balance"
                android:layout_weight="1"
                android:textColor="#CCCCCC"
                android:fontFamily="sans-serif"
                android:textSize="15sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="check"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif"
                android:textSize="15sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_right_alt_24"
                android:contentDescription="navigate to bank balance"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Rewards and Benefits -->
        <LinearLayout
            android:id="@+id/rewards_and_benefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#000000">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="YOUR REWARDS &amp; BENEFITS"
                android:textColor="#5C5C5C"
                android:letterSpacing="0.2"
                android:fontFamily="sans-serif"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="cashback balance"
                        android:fontFamily="sans-serif"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="â‚¹0"
                        android:textColor="#888888"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="navigate to cashback balance"
                    android:src="@drawable/outline_arrow_forward_ios_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444444"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#FFFFFF"
                        android:text="coins"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="26,46,583"
                        android:textColor="#888888"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="navigate to coins"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/outline_arrow_forward_ios_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444444"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="win upto Rs 1000"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="refer and earn"
                        android:textColor="#888888"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="navigate to refer"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/outline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

        <!-- Transactions & Support -->
        <LinearLayout
            android:id="@+id/transactions_and_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#000000">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TRANSACTIONS &amp; SUPPORT"
                android:textColor="#5C5C5C"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="all transactions"
                        android:fontFamily="sans-serif"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="navigate to all transactions"
                    android:src="@drawable/outline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
